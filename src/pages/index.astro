---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import { Button } from "../components/Button";
import { DownloadIcon } from "../assets/icons/DownloadIcon";
import AboutMe from "../scenes/about-me.astro";
import Technologies from "../scenes/technologies.astro";
import Projects from "../scenes/projects.astro";
---

<Layout title="Shanil De Silva - Full stack engineer">
  <div class="flex flex-col">
    <main class="flex justify-center flex-col h-screen gap-y-2" id="main">
      <div class="text-3xl font-bold">Hi, I'm <span>Shanil De Silva</span></div>
      <h1
        class="text-5xl font-heading font-extrabold bg-blueGradient text-transparent bg-clip-text"
      >
        Full Stack Developer.
      </h1>
      <div class="text-3xl">Specializing in interactive UI development</div>
      <Button className="w-fit gap-2 items-center mt-6 group" variant="outline">
        <DownloadIcon
          className="text-default group-hover:text-inverse"
          width={23}
        />
        <div>Resume</div>
      </Button>
    </main>
    <Section className="min-h-screen" title="About Me" id="about">
      <AboutMe />
    </Section>
    <Section className="min-h-screen" title="Technologies I've used" id="tech">
      <Technologies />
    </Section>
    <Section
      className="min-h-screen"
      title="Projects & Experience"
      id="projects"
    >
      <Projects />
    </Section>
  </div>
</Layout>
