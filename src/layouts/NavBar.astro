<div class="sticky top-0 bg-default">
  <nav class="hidden md:flex w-full">
    <ul class="flex w-full">
      <li
        class="p-4 hover:text-primary focus:text-primary transition-colors duration-200 self-start"
      >
        <a class="focus:text-primary font-heading" href="#main"
          >Shanil De Silva</a
        >
      </li>
      <li
        class="p-4 hover:text-primary focus:text-primary transition-colors duration-200 ml-auto"
      >
        <a class="focus:text-primary" href="#about">About</a>
      </li>
      <li
        class="p-4 hover:text-primary focus:text-primary transition-colors duration-200"
      >
        <a class="focus:text-primary" href="#tech">Technologies</a>
      </li>
      <li
        class="p-4 hover:text-primary focus:text-primary transition-colors duration-200"
      >
        <a class="focus:text-primary" href="#projects">Projects</a>
      </li>
    </ul>
  </nav>
  <div class="flex md:hidden justify-between p-4 z-10">
    <div class="font-heading bold">Shanil De Silva</div>
    <label for="nav" id="hamburger-menu" class="group">
      <input id="nav" type="checkbox" hidden />
      <svg
        class=""
        fill="#ffffff"
        width="25px"
        height="25px"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M20.75 7C20.75 7.41421 20.4142 7.75 20 7.75L4 7.75C3.58579 7.75 3.25 7.41421 3.25 7C3.25 6.58579 3.58579 6.25 4 6.25L20 6.25C20.4142 6.25 20.75 6.58579 20.75 7Z"
          fill="#ffffff"></path>
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M20.75 12C20.75 12.4142 20.4142 12.75 20 12.75L4 12.75C3.58579 12.75 3.25 12.4142 3.25 12C3.25 11.5858 3.58579 11.25 4 11.25L20 11.25C20.4142 11.25 20.75 11.5858 20.75 12Z"
          fill="#ffffff"></path>
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M20.75 17C20.75 17.4142 20.4142 17.75 20 17.75L4 17.75C3.58579 17.75 3.25 17.4142 3.25 17C3.25 16.5858 3.58579 16.25 4 16.25L20 16.25C20.4142 16.25 20.75 16.5858 20.75 17Z"
          fill="#ffffff"></path>
      </svg>
    </label>
    <nav
      id="hamburger-nav"
      class="absolute top-0 left-0 h-0 flex bg-secondary w-full group-checked:h-screen duration-300 justify-center items-center -z-10 overflow-hidden"
    >
      <ul id="hamburger-list" class="flex flex-col items-center gap-y-6">
        <li>
          <a class="p-4 text-4xl bold hover:brightness-90" href="#main"
            >Shanil De Silva</a
          >
        </li>
        <li>
          <a class="p-4 text-4xl bold hover:brightness-90" href="#about"
            >About</a
          >
        </li>
        <li>
          <a class="p-4 text-4xl bold hover:brightness-90" href="#tech"
            >Technologies</a
          >
        </li>
        <li>
          <a class="p-4 text-4xl bold hover:brightness-90" href="#projects"
            >Projects</a
          >
        </li>
      </ul>
    </nav>
  </div>

  <!-- styles -->
  <style>
    .nav-open {
      display: flex;
      height: 100vh;
    }
    .nav-close {
      display: none;
    }
  </style>

  <!-- handle nav open and close -->
  <script>
    const checked = document.getElementById("hamburger-btn");
    if (checked) {
      console.log("Menu is checked");
    }

    const toggleNav = () => {
      const navMenu = document.getElementById("hamburger-nav");
      const checked = document.getElementById("nav").checked;

      if (checked) {
        navMenu.classList.add("h-screen");
        navMenu.classList.remove("h-0");
      } else {
        navMenu.classList.remove("h-screen");
        navMenu.classList.add("h-0");
      }
      console.log("Toggle nav called");
    };

    const hamburgerMenu = document.getElementById("hamburger-menu");
    hamburgerMenu?.addEventListener("click", toggleNav);

    // Close nav items on list item click
    const handleNavItemClick = () => {
      const checkbox = document.getElementById("nav");
      checkbox.checked = false;
      toggleNav();
    };

    const navItems = document.querySelectorAll("#hamburger-list li");
    navItems.forEach((item) => {
      item.addEventListener("click", handleNavItemClick);
    });
  </script>
</div>
