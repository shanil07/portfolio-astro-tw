---
interface Props {
  id: string;
  title: string;
  className?: string;
}
const { id, title, className = "" } = Astro.props;
---

<section id={id} class={`mt-[60px] ${className}`}>
  <h2
    class="font-heading text-2xl mb-4 bg-blueGradient bg-clip-text text-transparent"
  >
    {title}
  </h2>
  <div>
    <slot />
  </div>
</section>
